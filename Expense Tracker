expenses = []

while True:
    item = input("Enter item name (or type 'done' to finish): ")
    if item.lower() == 'done':
        break
    try:
        amount = float(input(f"Enter amount for '{item}': â‚¹ "))
        expenses.append((item, amount))
    except ValueError:
        print("Please enter a valid number.")

# Show summary
print("\nðŸ§¾ Expense Summary:")
total = 0
for item, amount in expenses:
    print(f"- {item}: â‚¹{amount}")
    total += amount

print(f"\nðŸ’° Total spent: â‚¹{total}")
